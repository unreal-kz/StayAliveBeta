<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.unreal_kz.randomizer.Randomizer">


    <Button
        android:id="@+id/btnRandomize"
        android:layout_width="220dp"
        android:layout_height="?android:actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Randomize"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnBegin"
        android:layout_width="220dp"
        android:layout_height="?android:actionBarSize"
        android:layout_marginTop="23dp"
        android:text="Begin"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btnNext"
        android:layout_width="220dp"
        android:layout_height="?android:actionBarSize"
        android:layout_below="@+id/btnBegin"
        android:text="Next"
        android:textSize="24sp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtKillingId"
        android:layout_width="220dp"
        android:layout_height="?android:actionBarSize"
        android:layout_above="@+id/btnSlay"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter target ID number"
        android:textSize="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSlay"
        android:layout_width="220dp"
        android:layout_height="?android:actionBarSize"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Assassinate"
        android:textSize="22dp"
        android:visibility="gone" />
</RelativeLayout>
